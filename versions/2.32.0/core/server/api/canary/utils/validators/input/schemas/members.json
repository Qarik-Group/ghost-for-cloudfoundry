
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "members",
    "title": "members",
    "description": "Base members definitions",
    "definitions": {
        "member": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 191,
                    "pattern": "^([^,]|$)"
                },
                "email": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 191,
                    "pattern": "^([^,]|$)"
                },
                "id": {
                    "strip": true
                },
                "created_at": {
                    "strip": true
                },
                "created_by": {
                    "strip": true
                },
                "updated_at": {
                    "strip": true
                },
                "updated_by": {
                    "strip": true
                }
            }
        }
    }
}
